<!DOCTYPE html>
<html>
<head>
      <!-- Compiled and minified CSS -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
      <!-- Compiled and minified JavaScript -->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
      <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <title>Edit Employee</title>
      <link rel="stylesheet" href="/stylesheets/style.css">
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <script src="/javascripts/project.js"></script>  
      <script>
          $(document).ready(function(){
     $('.datepicker').datepicker();
      });
      
      $(document).ready(function(){
           $('select').formSelect();
          });  
      </script>  

</head>
<body>
    <form action="/employee/editdeleterecord" method="post">
      <input type="hidden" value="<%=data.employeeid %>" name="employeeid" id="employeeid">
    <div class="root">
        <div class="subdiv">
            <div class="heading">
               Employee Register
               <div style="position: fixed;margin-left: 716px;margin-top: 5px;"><a href="/employee/displayallemployee"><i style="color: #27ae60;" class="material-icons prefix">contacts</i></a></div>          
            </div>
            <% var temp=data.employeename.split(' ')
               var fn=temp[0]
               var ln=temp[1] 
               var  d=new Date(data.dob) 
               var  dob=d.getFullYear()+'-'+d.getMonth()+'-'+d.getDate() %> 
                
            <div class="row">
                <div class="input-field col s4">
                    <i class="material-icons prefix">account_circle</i>
                  <input  name='firstname' id="firstname" type="text" class="validate" value="<%=fn %>" >
                  <label for="firstname">First Name</label>
                </div>
                <div class="input-field col s4">
                    <i class="material-icons prefix">account_circle</i>
                  <input id="lastname" name='lastname' type="text" class="validate" value="<%=ln %>" >
                  <label for="lastname">Last Name</label>
                </div>
              <div class="input-field col s4">
                <i class="material-icons prefix">event</i>
                <input type="text" id="dob" name="dob" class="datepicker" value="<%=dob %>" >
                  <label for="dob">Birth Date</label>
                </div>
            </div>
            
            <div class="row">
              <div class="col s4" style="margin-top: 25px;">
                <label>
                    <input name="gender" value='Male' type="radio" <%=data.gender=='Male'?'checked':'' %> />
                    <span>Male</span>
                  </label>
                  <label>
                    <input name="gender" value="Female" type="radio" <%=data.gender=='Female'?'checked':'' %> />
                    <span>Female</span>
                  </label>
              </div>
              <div class="input-field col s4">
                <i class="material-icons prefix">phone</i>
                <input name="contactnumber" id="contactnumber" type="text" class="validate" value="<%=data.contactnumber %>">
                <label for="contactnumber">Mobile Number</label>
              </div>
              <div class="input-field col s4">
                <i class="material-icons prefix">mail</i>
                <input name="emailaddress" id="emailaddress" type="email" class="validate" value="<%=data.emailaddress %>">
                <label for="emailaddress">Email Address</label>
              </div>
      
            </div>
            
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">home</i>
                    <input name="address" id="address" type="text" class="validate" value="<%=data.address %>" >
                    <label for="address">Address</label>
                  </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    <select name="state" id="state">
                      <option value="<%=data.state %>" ><%=data.tstate %></option>
                    </select>
                    <label>State</label>
                  </div>
                  <div class="input-field col s6">
                    <select name="city" id="city">
                      <option value="<%=data.city %>" ><%=data.tcity %></option>
                    </select>
                    <label>City</label>
                  </div>
            </div>

            
                  
            <div class="row">
                <div class="col s6 btnstyle"  >
                    <button class="btn waves-effect waves-light" type="submit" name="btn" value="Edit" >Edit
                     <i class="material-icons right">create</i>
                    </button>
                </div>
                <div class="col s6 btnstyle">
                    <button class="btn waves-effect waves-light" type="submit" name="btn" value="delete" >Delete
                    <i class="material-icons right">delete</i>
                    </button>
                </div>
  
            </div>

             

            

        </div>
    </div>
</form>
</body>

<!--JavaScript at end of body for optimized loading-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js" ></script>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</html>